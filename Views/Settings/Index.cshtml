@model IEnumerable<Usey.Models.Category>

<h2>Settings</h2>

<h3>Categories</h3>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <form asp-controller="Settings" asp-action="DeleteCategory" method="post">
                        <input type="hidden" name="id" value="@category.Id" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("CreateCategory", "Settings")" class="btn btn-primary">Add New Category</a>

<h3>Notifications</h3>
<p>Notifications Here</p>


<style>
.btn {
    display: inline-block;
    padding: 8px 12px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s;
}

.btn:hover {
    background-color: #0056b3;
}

</style>