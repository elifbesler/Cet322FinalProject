@model IEnumerable<Usey.Models.Product>

<h2>Products</h2>

<form asp-controller="Products" asp-action="Index" method="get">
    <div class="search-bar">
        <input type="text" name="searchString" placeholder="Search by name" />
        <button type="submit">Search</button>
    </div>
</form>

<table class="product-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Purchase Date</th>
            <th>Expiration Date</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Quantity</td>
                <td>@product.PurchaseDate.ToShortDateString()</td>
                <td>@product.ExpirationDate.ToShortDateString()</td>
                <td>@product.Category</td>
                <td>
                    <a class="action-button" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a class="action-button" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" href="/Products/Create">Add New Product</a>

<style>

html {
  position: relative;
  min-height: 100%;
}

body {
  margin-bottom: 60px;
}

.product-table {
  width: 100%;
  border-collapse: collapse;
}

.product-table th, .product-table td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

.product-table th {
  background-color: #f2f2f2;
}

.btn {
  display: inline-block;
  padding: 6px 12px;
  margin: 5px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  text-decoration: none;
}

.btn:hover {
  background-color: #0056b3;
}

.search-bar {
  margin-bottom: 15px;
}

.search-bar input[type="text"] {
  padding: 8px;
  width: 200px;
  border-radius: 4px;
  border: 1px solid #ccc;
}

.search-bar button {
  padding: 8px 12px;
  border: none;
  border-radius: 4px;
  background-color: #4caf50;
  color: white;
  cursor: pointer;
}

</style>